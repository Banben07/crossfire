<Window x:Class="CrossfireCrosshair.ShareCodeInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="导入分享码"
        Width="560"
        Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        MinWidth="460"
        MinHeight="220">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   TextWrapping="Wrap"
                   Text="请粘贴准星分享码：" />

        <TextBox x:Name="ShareCodeTextBox"
                 Grid.Row="1"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Width="88" Margin="0,0,8,0" Content="导入" IsDefault="True" Click="Import_Click" />
            <Button Width="88" Content="取消" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
