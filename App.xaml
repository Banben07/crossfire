<Application x:Class="CrossfireCrosshair.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#0F131A" />
        <SolidColorBrush x:Key="AppPanelBrush" Color="#161B24" />
        <SolidColorBrush x:Key="AppControlBrush" Color="#1C2430" />
        <SolidColorBrush x:Key="AppBorderBrush" Color="#2D384A" />
        <SolidColorBrush x:Key="AppTextBrush" Color="#E8EDF5" />
        <SolidColorBrush x:Key="AppMutedTextBrush" Color="#A7B4C8" />
        <SolidColorBrush x:Key="AppAccentBrush" Color="#4DA3FF" />
        <SolidColorBrush x:Key="AppWarningBrush" Color="#FFB86C" />

        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
            <Setter Property="FontFamily" Value="Microsoft YaHei UI" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource AppPanelBrush}" />
            <Setter Property="Padding" Value="4" />
        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
            <Setter Property="Background" Value="{StaticResource AppControlBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
            <Setter Property="Background" Value="{StaticResource AppControlBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}" />
        </Style>

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
            <Setter Property="Background" Value="{StaticResource AppControlBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}" />
        </Style>

        <Style TargetType="{x:Type ListBox}">
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
            <Setter Property="Background" Value="{StaticResource AppControlBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}" />
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
        </Style>
    </Application.Resources>
</Application>
